<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:layout_marginBottom="15dp"
    android:background="@drawable/item_background">

    <ImageView
        android:id="@+id/gameImageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:contentDescription="Game Image" />

    <TextView
        android:id="@+id/gameNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Game Name"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_below="@id/gameImageView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp" />

    <ImageButton
        android:id="@+id/favoriteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/favorite_unfilled"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_alignParentEnd="true"
        android:minHeight="48dp"
        android:minWidth="48dp"
        android:layout_alignTop="@id/gameNameTextView"
        android:contentDescription="Favorite Button" />

    <TextView
        android:id="@+id/gameCategoryTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category"
        android:textColor="#808080"
        android:textSize="14sp"
        android:layout_below="@id/gameNameTextView"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/gameRatingTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rating"
        android:textColor="#E91E63"
        android:textSize="14sp"
        android:layout_below="@id/gameCategoryTextView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="4dp" />
</RelativeLayout>
